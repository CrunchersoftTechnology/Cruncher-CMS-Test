<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Class Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <style>
        .asterisk_input:before {
            content: " *";
            color: #e32;
            position: absolute;
            margin: 0px 0px 0px -20px;
            font-size: large;
            padding: 0 5px 0 0;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Class Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "StudentDashboard")</li>
                    <li>@Html.ActionLink("Fee Detail", "FeesDetails", "StudentDashboard")</li>
                    <li>@Html.ActionLink("Attendance", "Attendance", "StudentDashboard")</li>
                    <li>@Html.ActionLink("Feedback", "StudentFeedback", "StudentDashboard")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Download <i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("News", "GetNews", "StudentDashboard")</li>
                            <li>@Html.ActionLink("Notes", "GetNotes", "StudentDashboard")</li>
                            <li>@Html.ActionLink("Tests", "GetTests", "StudentDashboard")</li>
                            <li>@Html.ActionLink("Assignment", "GetAssignement", "StudentDashboard")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{ Html.RenderPartial("_Alerts"); }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.UtcNow.Year - Class Management System, Version- @typeof(CMS.Web.MvcApplication).Assembly.GetName().Version</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        function RequiredValidation(txtId, lblId) {
            if ($(txtId).val() != "") {
                $(lblId).removeClass('asterisk_input');
            }
            else {
                $(lblId).addClass('asterisk_input');
            }
        }
    </script>
    <script src="~/MVCGridHandler.axd/script.js"></script>
</body>
</html>
