        </div>
        <br />
        <div class="row">
            <div class="form-group form-group-sm">
                <div class="col-md-12">

                    <div id="btnActive">
                        <input type="button" id="activeCreate" class="btn btn-default" value="Create" disabled />
                        <input type="button" id="activeUpdate" class="btn btn-default" value="Modify" disabled />
                    </div>
                    <br />
                    <div id="alertMessage" class="alert hidden">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                        <div id="msg">
                        </div>
                    </div>
