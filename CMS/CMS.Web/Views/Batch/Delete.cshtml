@model CMS.Web.ViewModels.BatchViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete";
}

<h2>Delete Batch</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(m => m.ClassName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OutTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OutTime)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.BatchId)
        @Html.HiddenFor(model => model.ClassId)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.InTime)
        @Html.HiddenFor(model => model.OutTime)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Batches List", "Index")
        </div>
    }
</div>
