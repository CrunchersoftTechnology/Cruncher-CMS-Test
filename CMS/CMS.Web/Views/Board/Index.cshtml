        @model IEnumerable<CMS.Web.ViewModels.BoardViewModel>

        @{
            ViewBag.Title = "Index";
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
        }
        <br />
        <h2>Board List</h2>
        <p>
            @Html.ActionLink("Create New Board", "Create")
        </p>
        <div class="well">
            <div class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Board Name"
                           data-mvcgrid-type="filter" data-mvcgrid-option="BoardName" />
                </div>
                <button type="button" class="btn btn-default" data-mvcgrid-apply-filter="click">Search</button>
                <input type="submit" value="Reset" id="Submit" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Board")'" />
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Partial("_MVCGridToolbar", new CMS.Web.Models.MVCGridToolbarModel()
           {
               MVCGridName = "BoardGrid",
               PageSize = true,
               ColumnVisibility = true,
               Export = true,
               GlobalSearch = false
           })
                @Html.MVCGrid("BoardGrid", new { userRole = ViewBag.userId })
            </div>
        </div>