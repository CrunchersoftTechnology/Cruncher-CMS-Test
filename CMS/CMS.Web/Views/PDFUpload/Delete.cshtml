@model CMS.Web.ViewModels.PDFUploadDeleteViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #qdel {
        top: 0px;
        left: 0px;
        cursor: pointer;
        color: green;
        font-size: medium;
    }
</style>

<br />
<h2>Delete Student Upload</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PDFCategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PDFCategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileName)  
            <a href='/PDFUpload/DownloadPDF?id=@Html.DisplayFor(model => model.PDFUploadId)'>
                <span id="qdel" class="glyphicon glyphicon-download-alt" data-value="1" }></span>
            </a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsVisible)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsVisible)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsSend)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsSend)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.FileName)
        @Html.HiddenFor(model => model.PDFUploadId)
        @Html.HiddenFor(x => x.ClassName)
        @Html.HiddenFor(x => x.PDFCategoryName)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to PDF List", "Index")
        </div>
    }
</div>
