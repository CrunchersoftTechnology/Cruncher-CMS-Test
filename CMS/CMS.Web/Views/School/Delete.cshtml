@model CMS.Web.ViewModels.SchoolViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete School</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.SchoolId)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.CenterNumber)

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CenterNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CenterNumber)
            </dd>

        </dl>
        

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Schools List", "Index")
        </div>
    }
</div>
