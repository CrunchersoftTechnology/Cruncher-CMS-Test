@model CMS.Web.ViewModels.StudentTimetableEditViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Exam Timetable</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SelectedBranches)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedBranches)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.SelectedClasses)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedClasses)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.SelectedBatches)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SelectedBatches)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <br />
        @if (ViewBag.fileName != "" && ViewBag.fileName != null)
            {
            <dt>
                @Html.DisplayNameFor(model => model.FileName)
            </dt>

            <dd>
                <a href='@Url.Action("DownloadPDF", "StudentTimetable", new { id = Model.StudentTimetableId })' target="_blank"><span class='glyphicon glyphicon-download-alt'></span></a>
            </dd>
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.AttachmentDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AttachmentDescription)
            </dd>
            <br />
        }        
        <dt>
            @Html.DisplayNameFor(model => model.StudentTimetableDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentTimetableDate)
        </dd>
        <br />
    </dl>

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Description)
        @Html.HiddenFor(x => x.StudentTimetableId)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Exam Timetable List", "Index")
        </div>
    }
</div>
