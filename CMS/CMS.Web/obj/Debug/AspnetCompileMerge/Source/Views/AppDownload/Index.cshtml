
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="form-group">
    @Html.Label("Download latest Brochure", htmlAttributes: new { @class = "control-label col-md-3" })
    <div class="col-md-9">
        @if (@ViewBag.IsFileExists == "yes")
        {
            <a href='/AppDownload/DownloadApp'>
                <span id="download" class="glyphicon glyphicon-download-alt" data-value="1" }></span>
            </a>
        }
        else
        {
            <span id="download">No File</span>
        }
    </div>
</div>



