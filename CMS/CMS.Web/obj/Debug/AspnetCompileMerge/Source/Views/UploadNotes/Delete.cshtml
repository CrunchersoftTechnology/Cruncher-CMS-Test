@model CMS.Web.ViewModels.UploadNotesEditViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Delete Notes</h2>
<h3>Are you sure you want to delete this?</h3>
<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Board")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BoardName)
        </dd>
        <dt>
            @Html.DisplayName("Class")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt>
            @Html.DisplayName("Subject")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FileName)
            <a href='/UploadResult/DownloadPDF?id=@Html.DisplayFor(model => model.UploadNotesId)'>
                <span id="qdel" class="glyphicon glyphicon-download-alt" data-value="1" }></span>
            </a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LogoName)
        </dt>
        <dd>
            <div class="col-md-10">
                <img src="@Url.Content((Model.LogoName))" width="100" height="100" alt="Model.PhotoPath" />
            </div>
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UploadNotesId)
        @Html.HiddenFor(m => m.Title)
        @Html.HiddenFor(m => m.FileName)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Upload Notes List", "Index")
        </div>
    }
</div>
