    <script>

        if ($(".datepicker").val() == "01-01-0001") {
            $(".datepicker").val("");
        }

        $(".datepicker").datepicker({
            dateFormat: 'dd-mm-yy',
            changeYear: true,
            changeMonth: true,
            yearRange: "-100:+10",
        });

        $('.datepicker').keydown(function (e) {
            var afterValue;
            if (e.keyCode != 8) {
                if ($(".datepicker").val().length == 2 || $(".datepicker").val().length == 5) {
                    var beforeValue = $(".datepicker").val();
                    if ($(".datepicker").val().length == 2) {
                        if ((parseInt(beforeValue) > 30 || parseInt(beforeValue) == 0)) {
                            afterValue = "01";
                        } else {
                            afterValue = beforeValue;
                        }
                    }

                    if ($(".datepicker").val().length == 5) {
                        if ((parseInt(beforeValue.split('-')[1]) > 12 || parseInt(beforeValue.split('-')[1]) == 0)) {
                            afterValue = beforeValue.split('-')[0] + "-" + "01";
                        } else {
                            afterValue = beforeValue;
                        }
                    }
                    $(".datepicker").val(afterValue + "-");

                } else if ($(".datepicker").val().length == 10) {
                    var dateDetails = $(".datepicker").val().split('-');
                    if (parseInt(dateDetails[1]) > 12) {
                        dateDetails[1] = "01";
                    }
                    if (parseInt(dateDetails[0]) > 30) {
                        dateDetails[0] = "01";
                    }
                    var finalDate = dateDetails[0] + "-" + dateDetails[1] + "-" + dateDetails[2];
                    $(".datepicker").val(finalDate);
                }
            }
        });

        $(".datepicker").keyup(function (e) {
            var date2 = $(".datepicker").datepicker('getDate', '+1d');
            if (e.keyCode == 38) {
                date2.setDate(date2.getDate() + 1);
                $(".datepicker").datepicker('setDate', date2);
            }
            if (e.keyCode == 40) {
                date2.setDate(date2.getDate() - 1);
                $(".datepicker").datepicker('setDate', date2);
            }
        });

        function RequiredValidation(txtId, lblId) {
            if ($(txtId).val() != "") {
                $(lblId).removeClass('asterisk_input');
            }
            else {
                $(lblId).addClass('asterisk_input');
            }
        }
    </script>
