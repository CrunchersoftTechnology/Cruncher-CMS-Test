@model CMS.Web.ViewModels.SchoolViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create School</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 asterisk_input" , @id= "lblName"})
            <span class="control-label glyphicon glyphicon-info-sign" title="School name, will be required while registering  new student.."
                   id="tooltipName"></span>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CenterNumber, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-3">
                @Html.EditorFor(model => model.CenterNumber, new { htmlAttributes = new { @class = "form-control", @maxlength="30", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.CenterNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Schools List", "Index")
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#tooltipName").tooltip({ track: true });
            $('#Name').on('change', function () {
                RequiredValidation('#Name', '#lblName')
            });
    });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}

